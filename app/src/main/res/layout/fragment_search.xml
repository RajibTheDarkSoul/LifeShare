<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".searchFragment">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/shimmer_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchEdit">

        <include layout="@layout/shimmer_search_item" />
    </com.facebook.shimmer.ShimmerFrameLayout>


    <EditText
        android:id="@+id/searchEdit"
        android:layout_width="@dimen/_245sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shapeemail"
        android:backgroundTint="#3C807F7F"
        android:drawableLeft="@drawable/baseline_search_242"
        android:hint=" Search Donor"
        android:paddingLeft="@dimen/_10sdp"
        app:layout_constraintEnd_toStartOf="@+id/moreOptions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </EditText>

    <ImageButton
        android:id="@+id/moreOptions"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"

        android:layout_marginEnd="4dp"
        android:background="@drawable/shapelogintransparent"
        android:src="@drawable/baseline_more_vert_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchEdit"
        tools:visibility="gone"></androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>