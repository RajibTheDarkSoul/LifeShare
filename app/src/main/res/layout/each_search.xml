<?xml version="1.0" encoding="utf-8"?>

 <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal"
    android:layout_marginBottom="@dimen/_5sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewProfilePicsearch"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/roundshape"
        android:src="@drawable/profile1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewUserNameSearch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        android:fontFamily="@font/corsiva"
        android:text="Mohammed Rajib"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageViewProfilePicsearch"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bloodGroupSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="AB+"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/textViewUserNameSearch"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_editor_absoluteX="@dimen/_30sdp">

    </TextView>

    <TextView
        android:id="@+id/addressSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:text="Basail, Tangail"
        app:layout_constraintStart_toEndOf="@+id/imageViewProfilePicsearch"
        app:layout_constraintTop_toBottomOf="@+id/textViewUserNameSearch"></TextView>


    <TextView
        android:id="@+id/donatedTime1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        android:text="3 months"
        app:layout_constraintStart_toEndOf="@+id/addressSearch"
        app:layout_constraintTop_toBottomOf="@+id/textViewUserNameSearch">

    </TextView>

    <View
        android:id="@+id/horizontalLine"
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:background="#5B000000"


        app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>





